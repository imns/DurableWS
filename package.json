{
    "name": "durablews",
    "version": "1.0.0",
    "description": "A resilient, TypeScript-based WebSocket client",
    "type": "module",
    "main": "./dist/durablews.umd.cjs",
    "module": "./dist/durablews.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/durablews.js",
            "require": "./dist/durablews.umd.cjs"
        }
    },
    "files": [
        "dist",
        "LICENSE"
    ],
    "scripts": {
        "test": "vitest",
        "prebuild": "npm run clean",
        "build": "npm run clean && tsc && vite build",
        "prepublishOnly": "npm run build",
        "lint": "eslint src/",
        "clean": "rimraf dist"
    },
    "author": "Nate Smith (https://imns.co/)",
    "license": "MPL-2.0",
    "devDependencies": {
        "@types/node": "^20.11.17",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "3.2.5",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.3",
        "vite": "^5.1.1",
        "vite-plugin-dts": "^3.7.2",
        "vitest": "^1.2.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/imns/durablews.git"
    },
    "bugs": {
        "url": "https://github.com/imns/durablews/issues"
    },
    "keywords": [
        "websocket",
        "typescript",
        "websocket-client",
        "real-time",
        "connection-recovery",
        "automatic-reconnection",
        "message-queueing",
        "idle-detection",
        "subscription-management",
        "authentication",
        "durable",
        "resilient",
        "real-time-communication",
        "websocket-connection",
        "websocket-authentication",
        "typescript-library",
        "network-resilience",
        "event-handling",
        "websockets"
    ]
}
